{
    "name": "oktopost/pofig",
    "description": "Messaging library",
    "type": "lib",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Puchkov",
            "email": "alexey@oktopost.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "oktopost/skeleton": "^1.0",
        "oktopost/objection": "^1.0",
        "oktopost/annotation": "^1.0",
        "predis/predis": "^1.1",
        "unstable-cacao/structura": "^2.0.2"
    },
    "autoload": {
        "psr-4": {
            "Pofig\\": "src/Pofig"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1"
    },
    "scripts": {
        "test": "./vendor/phpunit/phpunit/phpunit --dont-report-useless-tests",
        "test-cover": "./vendor/phpunit/phpunit/phpunit --dont-report-useless-tests --coverage-html ./build/cover"
    }
}
